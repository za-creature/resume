mixin hide(data)
    span(style='display:inline-flex')
        - let bias = -2*data.length -4*Math.random()|0
        - data = [].map.call(data, l => [l, bias += 1+8*Math.random()|0])
        - for(let i=data.length; i>1; i--) {
        -     let di = i * Math.random()|0
        -     let aux = data[di]
        -     data[di] = data[i-1]
        -     data[i-1] = aux
        - }
        each p in data
            i(style=`order:${p[1]}`)
                - if(p[0] == ' ')
                    != '&nbsp;'
                - else
                    = p[0]

